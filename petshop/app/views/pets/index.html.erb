<h1>Listing pets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Breed</th>
    <th>Age</th>
    <th>Kind</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.name %></td>
    <td><%= pet.breed %></td>
    <td><%= pet.age %></td>
    <td><%= pet.kind %></td>
    <td><%= pet.user.name %></td>
    <td><%= link_to 'Show', pet %></td>
    <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
    <td><%= link_to 'Destroy', pet, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

